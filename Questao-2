<body>

<div class="calculadora">
    <h1><i></i>Calculadora</h1>
    <input type="number" id="numero1" placeholder="Primeiro número">
    <input type="number" id="numero2" placeholder="Segundo número">

<button onclick="somar()">Somar</button>

<p style="padding:flex; border: 1px solid gray;" id="resultado"><br><br></p>

<script>
function somar() {
    var n1 = parseFloat(document.getElementById('numero1').value) || 0;
    var n2 = parseFloat(document.getElementById('numero2').value) || 0;
    document.getElementById('resultado').innerText = n1 + n2;
}
</script>

